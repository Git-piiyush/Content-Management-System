<div class="row">
  <h4 class="center-align">Create Post</h4>
</div>

<div class="row">
  <form
    action="/stories"
    method="POST"
    class="col s8 m8 offset-m2"
    enctype="multipart/form-data"
  >
    <div class="row">
      <div class="input-field">
        <h5 style="font-weight: 450; font-size:18px">Title</h5>
        <input type="text" id="title" name="title" />
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <h5 style="font-weight: 450; font-size:18px">Image</h5>
        <input type="file" name="image" class="d-inline" />
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <h5 style="font-weight: 450; font-size:18px">Status</h5>
        <select id="status" name="status">
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
        </select>
        
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <h5>Tell Us Your Story:</h5>
        <textarea id="body" name="body"></textarea>
      </div>
    </div>

    <div class="row">
      <input type="submit" value="Save" class="btn" />
      <a href="/dashboard" class="btn orange">Cancel</a>
    </div>
  </form>
</div>